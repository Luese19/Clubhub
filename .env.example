# Environment Variables for ClubHub
# Copy this file to .env for local development
# For Heroku production, set these using: heroku config:set VARIABLE_NAME=value

# API Base URL for development
VITE_API_BASE_URL=http://localhost:3001/api

# For production (Heroku), this would be:
# VITE_API_BASE_URL=https://your-app-name.herokuapp.com/api

# Server Configuration
NODE_ENV=development
PORT=3001

# Database (for development - use your local database)
# DATABASE_URL=postgres://username:password@localhost:5432/clubhub_dev

# Authentication (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Optional: AI Integration
GEMINI_API_KEY=your-gemini-api-key-here

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
