# Production Environment Variables for Heroku
# Set these using: heroku config:set VARIABLE_NAME=value

# API Base URL for production
VITE_API_BASE_URL=https://your-app-name.herokuapp.com/api

# Server Configuration
NODE_ENV=production
PORT=80

# Database (Heroku will provide this automatically)
DATABASE_URL=postgres://your-heroku-postgres-url

# Authentication (REQUIRED - generate a secure secret)
JWT_SECRET=your-super-secure-production-jwt-secret-key-minimum-32-characters

# Optional: AI Integration
GEMINI_API_KEY=your-gemini-api-key-here

# CORS Configuration
FRONTEND_URL=https://your-app-name.herokuapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
